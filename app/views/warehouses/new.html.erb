<%= form_with url: warehouses_path do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code, 'Código' %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Descrição' %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, 'Endereço' %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city, 'Cidade' %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state, 'Estado' %>
    <%= form.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :postal_code, 'CEP' %>
    <%= form.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_area, 'Área Total' %>
    <%= form.text_field :total_area, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :useful_area, 'Área Útil' %>
    <%= form.text_field :useful_area, class: "form-control" %>
  </div>

  <%= form.submit 'Gravar', class: 'btn btn-primary' %>
<% end %>
